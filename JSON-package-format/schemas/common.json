{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.cudl.lib.cam.ac.uk/package/v1/common.json",

  "definitions": {
    "moduleReference": {
      "type": "object",
      "properties": {
        "@id": {"type": "string", "format": "uri-reference"}
      },
      "required": ["@id"],
      "additionalProperties": false
    },

    "htmlString": {
      "type": "string",
      "contentMediaType": "text/html"
    },

    "html": {
      "type": "object",
      "properties": {
        "@type": {"const": "html"},
        "value": {"$ref": "#/definitions/htmlString"}
      },
      "required": ["@type", "value"],
      "additionalProperties": false
    },

    "htmlReference": {
      "oneOf": [
        {"$ref": "#/definitions/moduleReference"},
        {"$ref": "#/definitions/html"}
      ]
    },

    "CURIE": {
      "type": "string",
      "$comment": "This is a CURIE (compact URI), but the regex here is an approximation, as the real thing is massive. Also the \"format\": \"curie\" is custom, so validators will ignore it by default, hence the approximation regex. See: https://www.w3.org/TR/2010/NOTE-curie-20101216/#P_curie",
      "format": "curie",
      "pattern": "^[^\\s]+$"
    },

    "uriOrCURIE": {
      "type": "string",
      "anyOf": [
        {"format": "uri-reference"},
        {"$ref": "#/definitions/CURIE"}
      ]
    },

    "typeBearer": {
      "description": "An object which is tagged with an @type property to identify its type. Used in locations where extensibility is required.",
      "type": "object",
      "properties": {"@type": {"$ref": "#/definitions/uriOrCURIE"}},
      "required": ["@type"]
    },

    "roleBearer": {
      "type": "object",
      "properties": {
        "@role": {
          "type": "array",
          "items": {"$ref": "#/definitions/uriOrCURIE"}
        }
      },
      "required": []
    }
  }
}
